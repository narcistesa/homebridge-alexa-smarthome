{
  "compilerOptions": {
    "target": "ES2022", // ~node18+
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "es2021", "es2022"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "allowJs": true
  },
  "include": ["src/", "__tests__/"]
}
